{% extends 'base.html.twig' %}

{% form_theme formpassrequest 'bootstrap_5_layout.html.twig' %}

{% block body %}

	<div class="container-fluid py-5 Register-bg" id="reinitialisation">
		<div class="row col col-lg-6">
			<div class="card  mb-3" >
				<div class="card-body">
					<div class="card-header mt-0"> 
						<h5>Demande reinitialisation mot de passe</h5>
					</div>
					
					{% for message in app.flashes('success') %}
						<div class="alert alert-info w-100 mt-3">
							{{ message }}
						</div>
					{% endfor %}
					{% for message in app.flashes('danger') %}
						<div class="alert alert-danger w-100 mt-3">
							{{ message }}
						</div>
					{% endfor %}
					{{ form_start(formpassrequest) }}
					<div class="form-group px-0 mb-3">
						{{ form_row(formpassrequest.username, {'label': 'Nom d\'utilisateur ','attr': {'placeholder': "Votre Nom d'utilisateur "}}) }}
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary">
							valider
						</button>
					</div>

					{{ form_end(formpassrequest) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
