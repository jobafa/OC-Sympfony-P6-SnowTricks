{% extends 'base.html.twig' %}

{% form_theme formpassrequest 'bootstrap_5_layout.html.twig' %}

{% block body %}

	<div class="container-fluid py-5 Register-bg">
		<h5>Demande reinitialisation mot de passe</h5>
		<div class="container px-0 pb-5" id="editPage">
			{% for message in app.flashes('success') %}
				<div class="alert alert-info w-100 mt-3">
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.flashes('danger') %}
				<div class="alert alert-danger w-100 mt-3">
					{{ message }}
				</div>
			{% endfor %}
			{{ form_start(formpassrequest) }}
			<div class="form-group px-0 mb-3">
				{{ form_row(formpassrequest.email, {'label': 'Email','attr': {'placeholder': "Votre email"}}) }}
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">
					valider
				</button>
			</div>

			{{ form_end(formpassrequest) }}
		</div>

	</div>
{% endblock %}
