{% extends 'base.html.twig' %}

{% form_theme formRegister 'bootstrap_5_layout.html.twig' %}

{% block body %}

<div class="container-fluid py-5 Register-bg">
	<h1>Inscription Utilisateur</h1>
	<div class="container px-0 pb-5" id="editPage">
		{{ form_start(formRegister) }}
		{{ form_row(formRegister.username, {'label': 'Nom D\'utilisateur','attr': {'placeholder': "Nom d'utilisateur"}}) }}
        {{ form_row(formRegister.email, {'label': 'Email','attr': {'placeholder': "Votre email"}}) }}
        {{ form_row(formRegister.password, {'label': 'Mot de passe','attr': {'placeholder': "votre mot de passe"}}) }}
        {{ form_row(formRegister.confirmpassword, {'label': 'Confirmation mot de passe','attr': {'placeholder': "Confirmer mot de passe"}}) }}
        {{ form_row(formRegister.lastname, {'label': 'Nom ','attr': {'placeholder': "Votre nom"}}) }}
        {{ form_row(formRegister.firstname, {'label': 'Prénom','attr': {'placeholder': "Votre Prénom"}}) }}

        <button type="submit" class="btn btn-primary">
            Inscription
        </button>

        {{ form_end(formRegister) }}
    </div>
</div>
{% endblock %}
