{% extends 'base.html.twig' %}


{% block body %}
	<div class="container-fluid py-5 ">
		<div class="row">
			<div class="col col-lg-6 ">
				<h1>Connexion Utilisateur</h1>
				<form action="{{ path('security_login') }}" method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% for message in app.flashes('success') %}
						<div class="alert alert-info w-100 mt-3">
							{{ message }}
						</div>
					{% endfor %}
					{% for message in app.flashes('danger') %}
						<div class="alert alert-danger w-100 mt-3">
							{{ message }}
						</div>
					{% endfor %}
					<div class="form-group px-0 mb-3">
						<input placeholder="Adresse email....." required name="_username" type="text" class="form-control">
					</div>
					<div class="form-group px-0 mb-3">
						<input placeholder="Mot de passe....." required name="_password" type="password" class="form-control">
					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="form-group">
						<button type="submit" class="btn btn-primary">Connexion</button>
					</div>
				</form>
				<div class="content-fluid alert-success mt-2 py-1 px-1 ">
					<p>
						<small>
							<a class="text-white mx-2 " href="{{ path('seurity_forgotpassword_request') }}">J'ai oubli&eacute; mon Mot de Passe</a>Vous n'avez pas encore de compte
							<a class=" text-white mx-2" href="{{ path('security_registration') }}">Inscrivez Vous</a>
						</small>
					</p>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
